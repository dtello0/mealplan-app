<div class="container2">
  <div class="banner">
    <h1>Welcome to Your Fitness Journey</h1>
    <div class="info-box">
      <div class="info-item">
        <p>Weight: <%= @user_last_goal.weight_in_kg.round %> kg</p>
      </div>
      <div class="info-item">
        <p>Calorie Objective: <%= @user_last_goal.calorie_objective.round %></p>
      </div>
      <div class="info-item">
        <p>Protein Objective: <%= @user_last_goal.protein_objective.round %> g</p>
      </div>
      <div class="info-item">
        <p>Carbs Objective: <%= @user_last_goal.carbs_objective.round %> g</p>
      </div>
      <div class="info-item">
        <p>Fat Objective: <%= @user_last_goal.fat_objective.round %> g</p>
      </div>
    </div>
  </div>
  
  <div class="sidebar">
    <ul>
      <li><a href="#">Meal Plan</a></li>
      <li><a href="#">Shopping List</a></li>
    </ul>
  </div>
  
  <div class="main-body">

    <div class = "button3-container">
    <a href="/mealplans/#{lastplan}" class="button3">Show last meal plan</a>
    <a href="/generate_mealplan" class="button3">Create plan for today</a>
    </div> 

    <h2>Meal Plan</h2>
    
    <% @meal_plan %>
    <ul class="meal-list">
      
      <% @meals = JSON.parse(@the_mealplan.content).keys.first(5) %>

      <% @meals.each do |key| %>
      
        <li>
          <%= key %>
        </li>

        <%= food_item = JSON.parse(@the_mealplan.content).fetch(key).fetch("food_item") %>
        <% ingredients = JSON.parse(@the_mealplan.content).fetch(key).fetch("ingredients") %>

        <% ingredients.each do |ingredient| %>
      
          <li>
            <input type="checkbox" id="ingredient-<%= ingredient %>">
            <label for="ingredient-<%= ingredient %>"><%= ingredient %></label>
          </li>

        <% end %>
      
      <% end %>

    </ul>
  </div>
</div>
